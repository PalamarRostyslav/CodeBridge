{
  "languages": {
    "c++": {
      "image": "gcc:latest",
      "file_extension": ".cpp",
      "compile_command": "g++ -o /tmp/program /tmp/code.cpp",
      "run_command": "/tmp/program",
      "timeout": 30,
      "working_dir": "/tmp"
    },
    "java": {
      "image": "openjdk:11",
      "file_extension": ".java",
      "compile_command": "javac /tmp/{class_name}.java",
      "run_command": "java -cp /tmp {class_name}",
      "timeout": 30,
      "working_dir": "/tmp"
    },
    "c#": {
      "image": "mcr.microsoft.com/dotnet/sdk:8.0",
      "file_extension": ".cs",
      "project_based": true,
      "timeout": 30,
      "working_dir": "/app"
    }
  },
  "docker": {
    "memory_limit": "512m",
    "cpu_period": 100000,
    "cpu_quota": 50000,
    "network_disabled": true,
    "remove_container": false
  }
}
